#vim: filetype=i3
#
#
#
###---Basic Definitions---###
#needed for i3-gaps
hide_edge_borders both
for_window [class="^.*"] border pixel 1
gaps inner 15
gaps outer 15
font pango:Fantasque Sans Mono 10
###---Variables---###
set $mod Mod1
set $term urxvt
set $browser chromium
set $floating_modifier $mod
set $inc amixer set Master 3%+
set $bigint amixer set Master 10%+
set $dec amixer set Master 3%-
set $bigdec amixer set Master 10%-
set_from_resource $fg i3wm.color7 #f0f0f0
set_from_resource $bg i3wm.color0 #f0f0f0

###---Startup---###
exec --no-startup-id compton -f
#exec --no-startup-id feh --bg-scale ~/.config/i3/wall.jpg
exec --no-startup-id wal -c
exec --no-startup-id wal -i /home/aaron/.config/i3/wall.jpg -a 95
#exec --no-startup-id unclutter
exec --no-startup-id clipit

###---Bar---###
bar {
  status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top
  colors {
    separator #7d7d7d
    background $bg
    statusline $fg
    focused_workspace $bg $fg $bg
    active_workspace #141414 #141414 #00b0ef
    inactive_workspace #141414 #141414 #7d7d7d
    urgent_workspace #ff7066 #141414 #ff7066
  }
}

###---Audio and Music---###




###---Scratchpad---###
#for_window [instance="dropdown"] floating enable



###---Basic Bindings---###
bindsym $mod+Return		exec $term

bindsym $mod+Escape 		worlspace prev
bindsym $mod+Shift+Escape	exec i3-msg exit

bindsym $mod+Shift+BackSpace	exec sudo reboot

###---Letter Key Bindings---###
bindsym $mod+q			kill
bindsym $mod+Shift+q		kill

bindsym $mod+w			exec --no-startup-id $browser

bindsym $mod+r			exec $term -e ranger
bindsym $mod+Shift+r		restart

bindsym $mod+t			split toggle
bindsym $mod+Shift+t		gaps inner current set 15; gaps outer current set 15

bindsym $mod+Shift+y		resize shrink width 10px or 10ppt

bindsym $mod+Shift+u		resize shrink height 10 px or 10 ppt

bindsym $mod+i			exec $term -e htop
bindsym $mod+Shift+i		resize grow height 10 px or 10 ppt

bindsym $mod+Shift+o 		resize grow width 10 px or 10 ppt

bindsym $mod+s			gaps inner current plus 5
bindsym $mod+Shift+s		gaps inner current minus 5

#bindsym $mod+d			exec i3-dmenu-desktop
bindsym $mod+Shift+d		gaps inner current set 0; gaps outer current set 0

bindsym $mod+f			fullscreen toggle

bindsym $mod+h			focus left
bindsym $mod+Shift+h		move left 30

bindsym $mod+j			focus down
bindsym $mod+Shift+j		move down 30

bindsym $mod+k			focus up
bindsym $mod+Shift+k		move up 30

bindsym $mod+l			focus right
bindsym $mod+Shift+l		move right 30

bindsym $mod+z			gaps outer current plus 5
bindsym $mod+Shift+z		gaps outer current minus 5

bindsym $mod+x			exec --no-startup-id ~/.config/i3/lock.sh
bindsym $mod+Shift+x		exec sudo shutdown -h now

##---Special key Bindings---##
bindsym $mod+space		focus mode_toggle
bindsym $mod+Shift+space	floating toggle
bindsym $mod+Tab		workspace back_and_forth


###Workspace Bindings---###
set $ws1 "1" 
set $ws2 "2" 
set $ws3 "3" 
set $ws4 "4" 
set $ws5 "5" 
set $ws6 "6" 
set $ws7 "7" 
set $ws8 "8" 
set $ws9 "9" 
set $ws10 "10"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10


bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+10 move container to workspace $ws10


###---Function key Bindings---###
#bindsym F1
#bindsym F2
#bindsym F3
#bindsym F4
#bindsym F5
bindsym F6			exec --no-startup-id light -U 1%
bindsym F7			exec --no-startup-id light -A 1%
#bindsym F8
#bindsym F9
#bindsym F10
bindsym $mod+F11   exec --no-startup-id redshift -O 3000
bindsym $mod+F12   exec --no-startup-id redshift -x


###---Media key Bindings---###
bindsym $mod+plus		exec $inc
bindsym $mod+Shift+Plus		exec $biginc
bindsym $mod+minus		exec $dec
bindsym $mod+Shift+minus	exec $bigdec

###---Mouse bindings---###
bindsym --release button2 kill
bindsym --whole-window $mod+button2 kill
bindsym button3 floating toggle
bindsym $mod+button3 floating toggle
bindsym button9 move left
bindsym button8 move right


#client.focused #00b0ef #00b0ef #141414 #ff7066
#client.focused_inactive #141414 #141414 #00b0ef #472b2a
#client.unfocused #141414 #141414 #7d7d7d #141414
#client.urgent #ff7066 #ff7066 #141414 #ff7066

# Set colors from Xresources
# Change 'color7' and 'color2' to whatever colors you want i3 to use 
# from the generated scheme.
# NOTE: The '#f0f0f0' in the lines below is the color i3 will use if
# it fails to get colors from Xresources.

# class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $bg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg

# PROTIP: You can also dynamically set dmenu's colors this way:
bindsym $mod+d exec dmenu_run -nb "$fg" -nf "$bg" -sb "$bg" -sf "$fg"
